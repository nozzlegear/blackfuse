@import("variables")

textColor = #46515f
blueColor = #6ed5e4
purpleColor = #7461aa
$color-1 = #fff
$color-2 = #a9a9a9
$color-3 = rgba(0,0,0,.3)
$color-4 = #7461aa
$color-5 = #46515f
smallMargin = 1.2rem

.box
    background $color-1
    padding 2.5rem 5rem
    border-radius 3px 3px 0 0
    border 1px solid $color-2
    min-width 320px
    max-width 412px
    padding 36px
    margin-bottom 28px
    margin-left auto
    margin-right auto
    text-align left

    @media screen and (max-width: smallWidthCutoff) {
        border none
        border-top none
        max-width none
        border-radius 0
    }

    @media screen and (min-width: smallWidthCutoff) {

    }

    &.blue
        border-top 6px solid blueColor

    &.purple
        border-top 6px solid purpleColor

    &.theme
        border-top 6px solid themeColor

    &.no-shadow
        box-shadow none

    &.no-bottom-margin
        margin-bottom 0

    &.pricing
        text-align center
        color textColor
        padding 4rem 2.5rem 0 2.5rem
        margin 0
        cursor pointer

        &.selected
            border-color $color-4

        >h3
            font-size 2.3rem
            font-weight 600
            margin 0
            padding 0

        >p
            font-size 1.5rem
            font-weight 600
            margin 1rem 0
            padding 0

        >input[type=radio]
            margin 2.3rem

    .btn {
        display block
        width 100%
    }

    .panel
        margin 0
        background-color $color-1
        border none
        border-radius 0
        box-shadow none
        display none

        &.active
            display block

        .header
            padding 0
            margin 0

            p
                color textColor
                font-size 1.55rem
                margin 0
                padding 0
                margin-top 1rem
                line-height 2.15rem

        .body
            padding 0
            margin (smallMargin * 2) 0
            color $color-5

            &.small-margin
                margin 2.5rem 0

            &.no-bottom-margin
                margin-bottom 0

            &.no-top-margin
                margin-top 0

            img
                margin-bottom 3.5rem

            .form-group
                label
                    color textColor

        .footer
            padding 0
            margin 0

            *
                margin-top smallMargin
                margin-bottom smallMargin

            :first-child
                margin-top 0

            :last-child
                margin-bottom 0

            .btn
                padding-top 8px
                padding-bottom 8px

            .dropdown
                a
                    padding 0

                .dropdown-menu
                    >li
                        >a
                            padding 3px 20px

        .footer::after
            clear both

    .success
        color green

    .tooltip
        &.fade
            z-index 1100

.box .panel .footer::before
.box .panel .footer::after
    display table
    content " "

.box .panel .header h1
.box .panel .header h2
.box .panel .header h3
.box .panel .header h4
.box .panel .header h5
    color textColor
    // text-align center
    font-size 2.8rem
    font-weight 400
    font-family Myriad Pro,Lato,Helvetica Neue,Arial
    margin 0
    padding 0

.box .error
.box .success
    color red
    // text-align center
    font-weight 400
    display block
    margin smallMargin 0
    vertical-align middle
    font-size 1.7rem

.box .panel .footer .dropdown
.box .panel .footer a:not(.btn)
    padding 6px 0
